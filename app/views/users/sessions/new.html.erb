<h2 class="text-center mb-4">Welcome Back!</h2>

<%= simple_form_for(resource, as: resource_name, url: session_path(resource_name),
  data: {turbo: false}) do |f| %>
  <div class="form-inputs">
    <%=
      f.input :email,
              required: false,
              autofocus: true,
              input_html: {
                autocomplete: 'email',
                placeholder: 'Email'
              }
    %>
    <%=
      f.input :password,
              required: false,
              input_html: {
                autocomplete: 'current-password',
                placeholder: 'Password'
              }
    %>
    <div class="mb-3 text-end " style="margin-top:-1rem;">
      <%= link_to "Forgot your password?", new_password_path(resource_name), class:"fs-8 text-decoration-none" %>
    </div>
  </div>

  <div class="form-actions d-grid my-3">
    <%= f.button :submit, 'Log in', class: "btn-primary" %>
  </div>
<% end %>

<div class="text-center fs-7 mt-5">
  <%= link_to "Don't have an account? Sign Up!", new_registration_path(resource_name), class:"text-decoration-none" %>
</div>
