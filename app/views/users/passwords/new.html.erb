<%= link_to new_session_path(resource_name), class: "btn btn-light", style:"margin-left: -3rem; margin-top: -5rem;"  do %>
  <i class="fa-solid fa-arrow-left"></i>
<% end %>

<h2 class="text-center mb-4">Forgot your password?</h2>

<%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post },
  data: {turbo: false}) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%=
      f.input :email,
              required: true,
              autofocus: true,
              input_html: {
                autocomplete: 'email',
                placeholder: 'Email'
              }
    %>
  </div>

  <div class="form-actions d-grid my-3">
    <%= f.button :submit, 'Send me reset password instructions', class: "btn-primary" %>
  </div>
<% end %>

<div class="text-center fs-7 mt-5">
  <%= link_to "Don't have an account? Sign Up!", new_registration_path(resource_name), class:"text-decoration-none" %>
</div>
