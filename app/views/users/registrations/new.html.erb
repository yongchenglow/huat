<h2 class="text-center mb-4">Join Us!</h2>

<%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name),
  data: {turbo: false}) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%=
      f.input :email,
              required: true,
              autofocus: false,
              input_html: {
                autocomplete: 'email',
                placeholder: 'Email',
              }
    %>
    <%=
      f.input :password,
              required: true,
              input_html: {
                autocomplete: 'new-password',
                placeholder: 'Password'
              }
    %>
    <%=
      f.input :password_confirmation,
              required: true,
              input_html: {
                autocomplete: 'new-password',
                placeholder: 'Confirm Password'
              }
    %>
  </div>

  <div class="form-actions d-grid my-3">
    <%= f.button :submit, 'Sign up', class: "btn-primary" %>
  </div>
<% end %>

<div class="text-center fs-7 mt-5">
  <%= link_to "Already have an account? Login!", new_session_path(resource_name), class:"text-decoration-none" %>
</div>
